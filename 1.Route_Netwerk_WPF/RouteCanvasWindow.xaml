<Window x:Class="_1.Route_Netwerk_WPF.RouteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1.Route_Netwerk_WPF"
        mc:Ignorable="d"
        Title="Nieuwe Route Aanmaken" Height="150" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Geef een naam voor de route:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="RouteNaamTextBox" Grid.Row="1" Height="30"/>

        <Button Content="Bevestig" Grid.Row="2" Height="30" Margin="0,10,0,0"
                HorizontalAlignment="Right" Width="100"
                Click="Bevestig_Click"/>
    </Grid>
</Window>
